<p id="notice"><%= notice %></p>

<h1>Nebenkostenabrechnungen</h1>

<table>
  <thead>
    <tr>
      <th>Adresse</th>
      <th>Beschreibung</th>
      <th>Wasser</th>
      <th>Abwasser</th>
      <th>Kaminkehrer</th>
      <th>Abfallbeseitigung</th>
      <th>Grundsteuer</th>
      <th>Heizungswartung</th>
      <th>Versicherung</th>
      <th>Vorauszahlung</th>
      <th>Restzahlung</th>
      <th>Jahr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if user_signed_in? %>
    <% @flats.each do |flat| %>
    <% if current_user.id == flat.user_id || current_user.id == 1 %>
      <tr>
        <td><%= flat.Adresse %></td>
        <td><%= flat.Beschreibung %></td>
        <td><%= flat.Wasser %></td>
        <td><%= flat.Abwasser %></td>
        <td><%= flat.Kaminkehrer %></td>
        <td><%= flat.Abfallbeseitigung %></td>
        <td><%= flat.Grundsteuer %></td>
        <td><%= flat.Heizungswartung %></td>
        <td><%= flat.Versicherung %></td>
        <td><%= flat.Vorauszahlung %></td>
        <td><%= flat.Restzahlung %></td>
        <td><%= flat.Jahr %></td>
        <td><%= link_to 'Show', flat %></td>
        <% if current_user.id == 1 %>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
  <% if current_user.id == 1 %>
<%= link_to 'New Flat', new_flat_path %>
<% end %>
